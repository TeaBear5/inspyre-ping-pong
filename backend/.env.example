# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Allowed hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF trusted origins (comma-separated, include protocol)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# CORS allowed origins (comma-separated, for production frontend URLs)
CORS_ALLOWED_ORIGINS=

# Firebase Configuration
# Option 1: Path to service account JSON file
FIREBASE_CREDENTIALS_PATH=

# Option 2: JSON string of service account (for Docker/Cloud Run)
FIREBASE_CREDENTIALS_JSON=

# Option 3: Just project ID (uses default credentials on Google Cloud)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Admin settings
ADMIN_EMAIL=admin@example.com
DEFAULT_FROM_EMAIL=noreply@yourapp.com

# Database settings (leave DB_HOST empty to use SQLite)
# For Docker Compose local development:
DB_HOST=db
DB_NAME=pingpong
DB_USER=admin
DB_PASSWORD=password
DB_PORT=5432

# For Google Cloud SQL (set via Secret Manager in production):
# DB_HOST=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
# DB_NAME=pingpong
# DB_USER=django_user
# DB_PASSWORD=your-cloud-sql-password